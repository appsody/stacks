    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-simple'",
            /**
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-simple",
                    "--package=rust-simple"
                ],
                "filter": {
                    "name": "rust-simple",
                    "kind": "bin"
                }
            },*/
            "program": "${workspaceFolder}/target/debug/rust-simple",
            "sourceLanguages": ["rust"],
            "initCommands": [
                "platform select remote-linux",
                "platform connect connect://localhost:1234",
                "platform settings -w /project/user-app/target/debug",
                //"target create rust-simple",
                //"process launch"
                //"file rust-simple",
                //"run"
            ]
        }
    ]
}